<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Title</th>
      <th scope="col">Author</th>
    </tr>
  </thead>
  <tbody>
  <% @book.each do |book| %>
      <tr> 
        <td><%= book.id %> </td>
        <td> <%= book.title %> </td>
        <td> <%= book.author %> </td>
        <% if user_signed_in?  %>
          <td> <%= link_to "Reserve", reserve_path(book), method: :post, class: "btn btn-light" %> </td>
        <% end %>
      </tr> 
    <% end %>
  </tbody>
</table>

